# Skills Search Backend - Environment Configuration
# Copy this file to .env and customize for your environment

# Application
APP_VERSION=1.0.0
ENVIRONMENT=development

# AWS Configuration
AWS_PROFILE=default
AWS_REGION=us-east-1
AWS_BEDROCK_MODEL_ID=amazon.titan-embed-text-v2:0
AWS_VECTOR_INDEX_NAME=skills-index
AWS_S3_BUCKET_PREFIX=skills-selector-

# CORS (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Data
USER_DB_PATH=data/user_db.json

# Scoring Configuration
# Level weights (how much each hierarchy level contributes)
LEVEL_WEIGHT_L1=0.1
LEVEL_WEIGHT_L2=0.2
LEVEL_WEIGHT_L3=0.5
LEVEL_WEIGHT_L4=0.3

# Rating multipliers (exponential: Beginner, Intermediate, Advanced)
RATING_MULTIPLIER_1=1.0
RATING_MULTIPLIER_2=2.0
RATING_MULTIPLIER_3=4.0

# Transfer bonus (for related tech under different L3)
TRANSFER_BONUS_PER_TECH=0.02
TRANSFER_BONUS_CAP=0.15

# Score buckets (thresholds)
EXCELLENT_MIN_SCORE=80
STRONG_MIN_SCORE=60
GOOD_MIN_SCORE=40

# Display configuration
TOP_USERS_COUNT=5
USERS_PER_PAGE=10
